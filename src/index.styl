@import url('https://file.myfontastic.com/9L2j4suCPY7mwKXm7E7v6A/icons.css')
@import url('https://fonts.googleapis.com/css?family=Montserrat:400,700')
@import url('https://necolas.github.io/normalize.css/5.0.0/normalize.css')
@import '../node_modules/jeet/styl'

primary = #26d2cc
secondary = #fff
dark = #193240


body
  margin 0
  padding 0
  font-family Montserrat, sans-serif
  font-weight 800
  text-transform uppercase
  color dark

a
  color: inherit
  text-decoration: inherit

.cover
  position: relative
  background: url('http://i.pi.gy/GeJv.png') no-repeat center center
  background-size: cover
  height: 100vh
  width: 100%

  h1
    font-size: 3.2em
    color: primary
    text-shadow: 0 2px 11px #000;
    text-align: center
    line-height: 60vh


  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-30px);
    }
    60% {
      transform: translateY(-15px);
    }
  }

  .bounce
    animation: bounce 2s infinite

  .arrow
    center()

.header
  display: flex
  justify-content: flex-end
  padding: 5vh 6vh
  position: relative
  list-style-type: none;
  margin: 0

  .icon
    font-size: 2.5em
    color: secondary
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.35)

  .icon-combined-shape
    padding-top: 1px;
    font-size: 2.7em

  .signup
    align-self: center
    padding-bottom: 5px;
    margin-top: -20px;
    margin-left: 30px
    font-size: 1.2em
    color: secondary
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.35)
    border-bottom: 3px solid primary
    box-shadow: 0 8px 6px -6px rgba(0, 0, 0, 0.71)



  .icon-logo
    margin-right: auto;
    font-size: 2.5em
    color: primary
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.35)


h4
  margin-left: 20px;
  margin-bottom: 30px;

h6
  font-size: 0.65em;
  text-align: center
  width: 91%
  white-space: nowrap
  overflow:hidden
  text-overflow: ellipsis

.movie-list
  display: flex
  margin: 0;
  padding: 0;
  justify-content: space-around
  list-style-type: none

  .bgimg
    position: absolute
    z-index: -1
    filter: blur(10px)
    transform: scale(1.05);
    box-shadow: 0 32px 99px 0 rgba(0,0,0,0.17)

  .posterimg
    height: 278px
    width: 185px

  .movietitle
    position: relative
    display: flex
    align-items: center
    justify-content: center
    height: 40px
    width: 186px
    margin-top: -5px;
    z-index: 10
    background: secondary
    box-shadow: 0 -17px 30px 0 rgba(0,0,0,0.52)



.popular
  position: relative
  margin-top: 100px;

  .bgcover
    width: 100%


  .heading
    position: absolute
    top: -30px
    left: 40px
    width: 250px
    display: flex
    align-content: center
    justify-content: center
    height: 60px
    background: secondary
    box-shadow: 0 2px 13px 0 rgba(0,0,0,0.50);

  .pinfo
    background: secondary
    box-shadow: 0 3px 56px 0 rgba(0,0,0,0.24)
    text-transform: none
    align(both)
    width: 44%

    .details
      column(2/3)
    .poster
      column(1/3)
    h2
      margin-top: 50px
      margin-bottom: 20px
      font-size: 1.4em
      display: inline-block
      text-transform: uppercase
    .date
      font-size: 1.4em
      color: primary
      margin-left: 5px
    .overview
      margin: 0
      font-weight: 100
      font-size: 12px
      line-height: 15px
      width: 70%
      display: -webkit-box;
      overflow : hidden;
      text-overflow: ellipsis;
      -webkit-line-clamp: 5;
      -webkit-box-orient: vertical;
    .info
      position: absolute
      bottom: 15px

      .duration
        display: inline-block
        font-size: 9px
        margin-left: 5px
      .stars
        display: inline
        margin-left: 40px
        margin-bottom: -5px
      .score
        margin-left: 10px
        display: inline-block
        font-size: 9px


.recommended
  margin-bottom: 50px
  margin-top: 30px


.footer
  display: flex
  align-items: center;
  justify-content: center;
  background-color: dark
  color: secondary
  height: 4vh
  width: 100%

  h5
    margin: 0
    padding: 0
    font-size: 0.5em








